<Window x:Class="Neyron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neyron"
        mc:Ignorable="d"
        Title="Neyron" Height="450" Width="450" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" MinWidth="450" MinHeight="450">
    <Grid x:Name="mainGrid"  Background="#FFDCF9E4">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="25" Height="25*"></RowDefinition>
            <RowDefinition Height="400*" Focusable="False"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="sizeX" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="40" Height="18" Margin="4,0,0,0" UseLayoutRounding="False" Cursor="" Text="10"/>
        <TextBox x:Name="sizeY" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="40" Height="18" Margin="60,0,0,0" UseLayoutRounding="False" Cursor="" Text="10"/>
        <TextBox x:Name="speed" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="40" Height="18" Margin="116,0,0,0" UseLayoutRounding="False" Cursor="" Text="50" TextChanged="speed_TextChanged"/>
        <Button x:Name="sizeButton" Grid.Row="0" Content="Сброс" HorizontalAlignment="Right" Click="sizeButton_Click" Height="22" Width="100"/>
        <Button x:Name="addPixel" Grid.Row="0" Content="Добавить точку" HorizontalAlignment="Center" Height="22" Width="100" Click="addPixel_Click"/>
    </Grid>
</Window>